.nav {
    &__list {
        display: flex;
    }

    &__item {
        margin-right: 60px;
        opacity: 1;
        &:last-child {
            margin-right: 0;
        }
    }
    
    &__link {
        padding: 10px 0 15px;
        &:hover {
            color: $content-color;
            border-bottom: 1px solid $content-color;   
        }
    }
}