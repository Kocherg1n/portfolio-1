.header {
    position: absolute;
    width: 100%;
    z-index: 1;
    &__container {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 50px 0;
    }
    &__menu {
        @include tablets {
            display: none;
        }
    }
    &__mobile-menu {
        display: none;

        @include tablets {
            display: block;
        }
    }
}
