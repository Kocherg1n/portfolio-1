script(type="text/x-template")#slider-container
    .slider__wrapper
        display(
            :works="works"
            :currentWork="currentWork"
            @slide="handleSlide"
        )
        info(
            :currentWork="currentWork"
            :currentIndex="currentIndex"
        )
        
script(type="text/x-template")#slider-display
    .slider__display
        .slider__main
            img(:src="currentWork.photo", alt="скриншот страницы моего проекта" class="slider__image")    
            preview(
                :works="works"
                :currentWork="currentWork"
            )
            btns(
                @slide="$emit('slide', $event)"
            )                 

script(type="text/x-template")#slider-preview
    .slider__preview-wrapper  
        ul.slider__preview
            li.slider__item(
                v-for="work in works"
                :class="{active: work.id === currentWork.id}"
            )
                button(type="button" aria-label="миниатюра слайдера" tabindex="-1").slider__preview-btn
                    img(:src="work.photo" alt="миниатюра скриншота страницы моего проекта" class="slider__image")
            
script(type="text/x-template")#slider-button
    .slider__button
        button(@click.prevent="$emit('slide', 'next')" type="button" aria-label="следующий слайд").slider__button-arrow
            +icon("arrow-down", "arrow arrow--next")                  
        button(@click.prevent="$emit('slide', 'prev')" type="button" aria-label="предыдущий слайд").slider__button-arrow
            +icon("arrow-down", "arrow arrow--prev")

script(type="text/x-template")#slider-content
    .slider__content
        .slider__counter {{currentIndex+1}}       
        .slider__desc
            tags(
                :tags="tagsArray"
            )
            h3.slider__subtitle {{currentWork.title}}
            p.slider__text.text {{currentWork.desc}}
            a(:href="currentWork.link").slider__link Посмотреть сайт

script(type="text/x-template")#slider-tags 
    .slider__skills
            .slider__item_skills.text(v-for="tag in tags") {{tag}}               